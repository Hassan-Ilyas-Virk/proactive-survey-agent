{
  "agent_name": "ProactiveSurveyAgent",
  "agent_id": "proactive_survey_001",
  "agent_type": "survey_agent",
  "version": "1.0.0",
  "description": "Analyzes user interactions and triggers personalized feedback surveys",
  
  "network": {
    "host": "localhost",
    "port": 8001,
    "protocol": "http"
  },
  
  "supervisor": {
    "id": "SupervisorRegistry",
    "host": "localhost",
    "port": 8000,
    "auto_register": true,
    "heartbeat_interval": 60
  },
  
  "capabilities": [
    "survey_analysis",
    "sentiment_detection",
    "pattern_recognition",
    "feedback_generation",
    "user_profiling"
  ],
  
  "business_logic": {
    "survey_cooldown_days": 30,
    "priority_levels": ["low", "medium", "high", "urgent"],
    "survey_types": [
      "Product Experience",
      "Support Quality",
      "General Feedback",
      "Engagement Check"
    ]
  },
  
  "ltm_config": {
    "storage_type": "file",
    "base_directory": "shared/LTM/ProactiveSurveyAgent",
    "max_entries": 10000,
    "cleanup_interval_hours": 24
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_file": "logs/proactive_survey_agent.log"
  }
}

